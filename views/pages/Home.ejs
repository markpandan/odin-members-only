<div class="container">
    <h1 class="container-header">Posts</h1>
    <div class="post-container">
        <div class="post-column">
            <% for (let i = 0; i < posts.length; i+=3 ) { %> 
                <div class="card">
                    <section class="card-header"><%= posts[i].title %></section>
                    <hr>
                    <article><%= posts[i].description %></article>
                </div>
            <% } %>
        </div>
        <div class="post-column">
            <% for (let i = 1; i < posts.length; i+=3 ) { %> 
                <div class="card">
                    <section class="card-header"><%= posts[i].title %></section>
                    <hr>
                    <article><%= posts[i].description %></article>
                </div>
            <% } %>
        </div>
        <div class="post-column">
            <% for (let i = 2; i < posts.length; i+=3 ) { %> 
                <div class="card">
                    <section class="card-header"><%= posts[i].title %></section>
                    <hr>
                    <article><%= posts[i].description %></article>
                </div>
            <% } %>
        </div>

    </div>
</div>